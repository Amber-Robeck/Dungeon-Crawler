<h2>Update campaign name</h2>
<div class="container">
    <form action="/api/campaign/" method="POST">
        <div class="form-group">
            <label for="exampleFormControlSelect2">What campaign would you like to update?</label>
            <select multiple name='originalname' class="form-control" id="exampleFormControlSelect2">
                {{#each campaigns as |campaign|}}
                <option>{{campaign.name}}</option>
                {{/each}}
            </select>
        </div>

        <div class="mb-3">
            <label for="campaign-name" class="form-label">What is your new Campaign name?</label>
            <input type="text" name="updatedname" class="form-control" id="campaign-name"
                aria-describedby="campaign-name">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>