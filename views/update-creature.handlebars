<h2>{{creature.name}}{{#if creature.key_npc}}*{{/if}}</h2>

<div class="container">
    <form action="/api/creatures/{{creature.id}}" method="POST">
        <div class="form-group">
            <div class="card creature-card" style="width: 28rem;">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <label for="creature-name" class="form-label">Creature Name</label>
                        <input type="text" aria-describedby="creature-name" name="updatedname"
                            value="{{creature.name}}">
                    </li>
                    <li class="list-group-item">
                        <label for="update-room">Room:</label>
                        <select name="updatedroom">
                            {{#each roomData as |room|}}
                            <option value="{{room.id}}" {{#if room.creature_room}}selected{{/if}}>{{room.name}}</option>
                            {{/each}}
                        </select>
                    </li>
                    <li class="list-group-item">
                        <label for="new-hp">HP:</label>
                        <input type=number value="{{creature.hp}}" name="updatedhp">
                    </li>
                    <li class="list-group-item">
                        <label for="update-alive">Status:</label>
                        <select name="updatedalive">
                            <option value=1 {{#if creature.is_alive}} selected{{/if}}>Alive</option>
                            <option value=0 {{#unless creature.is_alive}} selected{{/unless}}>Dead</option>
                        </select>
                    </li>
                    <li class="list-group-item">
                        <label for="loot">Carrying:</label>
                        <textarea name="updatedloot" class="form-control" id="creature-loot"
                            aria-describedby="loot">{{creature.loot}}</textarea>
                    </li>
                </ul>
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>



